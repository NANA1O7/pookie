<body>
  <h1>Can you be my best friend again?<br>Can we please spend time together?</h1>
  <img id="gif" src="1E90D0FE-E9F8-40E9-BBF5-C08ED8E0603A.jpeg" alt="Cute Gif">

  <div class="button-container">
    <button id="yesBtn">Yes</button>
    <button id="noBtn">No</button>
  </div>

  <div id="messages"></div>

  <div id="thankYou">
    ðŸ’– Thank you so much. I love you ðŸ’–
    <br>
    <img id="finalGif" src="1E90D0FE-E9F8-40E9-BBF5-C08ED8E0603A.jpeg" alt="Love Gif">
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const messagesDiv = document.getElementById("messages");
    const thankYouDiv = document.getElementById("thankYou");
    const finalGif = document.getElementById("finalGif");

    const messages = [
      "please hamza",
      "pretty please",
      "hamozaaaa please",
      "please my love",
      "please my pookie",
      "please hamozyyyy"
    ];
    let msgIndex = 0;

    yesBtn.addEventListener("click", () => {
      messagesDiv.innerHTML += `<div>${messages[msgIndex]}</div>`;
      msgIndex = (msgIndex + 1) % messages.length;

      if (msgIndex === 0) {
        thankYouDiv.style.display = "block";
        finalGif.style.display = "block";
      }
    });

    noBtn.addEventListener("click", () => {
      let currentSize = noBtn.getBoundingClientRect().width;
      noBtn.style.width = currentSize + 40 + "px";
      noBtn.style.height = currentSize + 20 + "px";

      if (currentSize > window.innerWidth / 1.5) {
        thankYouDiv.style.display = "block";
        finalGif.style.display = "block";
        document.querySelector(".button-container").style.display = "none";
        messagesDiv.style.display = "none";
      }
    });
  </script>
</body>
